<p id="notice"><%= notice %></p>

<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>City</th>
      <th>Marks</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<%= search_form_for @q, url: students_path do |f| %>
  <%= f.label :name_cont, 'Full Name' %>
  <%= f.search_field :name_cont %>
  <%= select_tag(:city_id, options_for_select([['Active', 1], ['Non Active', 2]]),prompt: "Select something") %>
  <%= f.submit %>
<% end %>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.city %></td>
        <td><%= student.marks %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>




